<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
        key="merchantId"
        obligatory="true"
        title="ID мерчанта"
        dialogTitle="ID мерчанта"
        dialogMessage="Введите ID мерчантов (через пробел), зарегистрированных в Приват24"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|ID мерчанта|{@s}">
    </EditTextPreference>
    <EditTextPreference
        key="password"
        obligatory="true"
        title="32-значный пароль"
        dialogTitle="32-значный пароль"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="||******"
        inputType="textPassword">
    </EditTextPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-01-01"
        dialogTitle="С какой даты загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}">
    </EditTextPreference>
</PreferenceScreen>
